{
  "name": "puf-api",
  "version": "0.0.0",
  "main": "index.js",
  "author": {
    "name": "Luan Melo",
    "email": "luanmelolima@gmail.com"
  },
  "license": "MIT",
  "private": true,
  "scripts": { 
    "db:migrate": "yarn prisma migrate dev --preview-feature",
    "fix": "run-s \"fix:* {@}\" --",
    "fix:lint": "eslint --fix --no-error-on-unmatched-pattern",
    "fix:format": "prettier --write",
    "format": "yarn fix:format 'src/**/*.(js|ts|md|json)",
    "lint": "yarn fix:lint src/**/*.{js,ts,md,json}",
    "test": "yarn jest",
    "prebuild": "rm -Rf ./dist",
    "build": "babel src --exteecnsions \".js\" --ignore \"*.spec.js,*.test.js\" --out-dir dist --out-dir dist --copy-files",
    "dev": "nodemon --exec babel-node -- -r dotenv-safe/config src/index.js"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,md,json}": [
      "yarn fix"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/node": "^7.18.10",
    "@babel/plugin-proposal-optional-chaining": "^7.18.9",
    "@babel/preset-env": "^7.18.10",
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@types/dotenv-safe": "^8.1.2",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "@prisma/client": "4.2.1",
    "bcrypt": "^5.0.1",
    "dotenv": "^16.0.1",
    "dotenv-safe": "^8.2.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "prisma": "^4.3.0"
  }
}
